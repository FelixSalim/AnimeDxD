<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavTextStyle" parent="TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="PopupAnimation">
        <item name="android:windowEnterAnimation">@anim/dropdown_open</item>
        <item name="android:windowExitAnimation">@anim/dropdown_close</item>
    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Dialog">
        <!-- Makes the dialog wider and background transparent -->
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>