<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="640dp"
    android:orientation="vertical"
    android:background="@drawable/bg_add_a_review"
    android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="540dp"
            android:background="@drawable/bg_add_a_review"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="0dp"
                android:paddingBottom="16dp"
                android:fontFamily="@font/poppins_bold"
                android:text="ADD A REVIEW"
                android:textSize="10pt"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_italic"
                android:text="Username"
                android:textSize="6pt"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_border"
                android:textSize="6pt"
                android:fontFamily="@font/poppins"
                android:hint="Enter your username..."
                android:textColorHint="@android:color/darker_gray"
                android:textColor="#FFFFFF"
                android:padding="7dp" />

            <TextView
                android:id="@+id/tvErrorUsername"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="⚠️ Username is required."
                android:textColor="#FF0000"
                android:fontFamily="@font/poppins_bolditalic"
                android:textSize="10sp"
                android:visibility="invisible"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

            <!-- Review Label -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Review"
                android:textSize="7pt"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/poppins_bolditalic"
                android:textColor="#FFFFFF"
                android:textStyle="italic" />

            <!-- Review Input -->
            <EditText
                android:id="@+id/etReview"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:fontFamily="@font/poppins"
                android:background="@drawable/edittext_border"
                android:gravity="top"
                android:textSize="6pt"
                android:hint="Give your comment here..."
                android:textColorHint="@android:color/darker_gray"
                android:textColor="#FFFFFF"
                android:padding="7dp"/>

            <TextView
                android:id="@+id/tvErrorReview"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="⚠️ Review is required."
                android:textColor="#FF0000"
                android:fontFamily="@font/poppins_bolditalic"
                android:textSize="10sp"
                android:layout_marginTop="5dp"
                android:visibility="invisible"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>

    <!-- Button row fixed at bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/background"
        android:gravity="center"
        android:padding="10dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_bold"
            android:text="CANCEL"
            android:textSize="7pt"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/cancel_button"
            android:layout_marginEnd="10dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_bold"
            android:textSize="7pt"
            android:text="SAVE"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/save_button"/>
    </LinearLayout>

</LinearLayout>
