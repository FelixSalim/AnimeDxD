<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activities.DetailActivity">

    <!-- Konten yang bisa discroll -->
    <ScrollView
        android:id="@+id/detailScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/reviewButton"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Bagian atas: Cover + Overlay + Judul -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="350dp">

                <ImageView
                    android:id="@+id/coverImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/naruto_cover" />

                <View
                    android:id="@+id/overlay"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/gradient_overlay" />

                <!-- Back Button -->
                <ImageButton
                    android:id="@+id/backButton"
                    android:layout_width="41dp"
                    android:layout_height="27dp"
                    android:layout_margin="16dp"
                    android:background="@drawable/rounded_button"
                    android:padding="8dp"
                    android:src="@drawable/baseline_arrow_back_24"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    app:tint="@android:color/white" />

                <!-- Judul di atas overlay -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_horizontal"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/titleLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Naruto"
                        android:textColor="@android:color/white"
                        android:textSize="27sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>

            <!-- Bagian bawah: Genre + Synopsis -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/genreLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_genre_bg"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Action, Adventure, Martial Arts, Shounen"
                    android:textColor="@android:color/white"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Synopsis"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/synopsisLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:text="A young ninja named Naruto Uzumaki dreams of becoming the Hokage..."
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:justificationMode="inter_word"
                    android:lineSpacingExtra="2dp"
                    android:scrollHorizontally="false"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Review Button Fixed -->
    <Button
        android:id="@+id/reviewButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/review_button_bg"
        android:text="REVIEW"
        android:textColor="@android:color/white"
        android:textStyle="bold" />
</RelativeLayout>
